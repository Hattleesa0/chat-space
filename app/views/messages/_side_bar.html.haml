.side_bar
  .side_bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path do
          = icon('fas', 'pen-square', class: 'top-items__icons--setting')
        = link_to edit_user_path(current_user.id) do
          = icon('fas', 'cog', class: 'top-items__icons--setting')

  .side_bar__group-list
    - current_user.groups.each do |group|
      .group-box
        = link_to group_messages_path(group), class: "group-box__link" do
          .group-box__name
            = group.name
          .group-box__message
            = group.show_last_message
      